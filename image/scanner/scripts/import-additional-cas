#!/bin/sh

set -euo pipefail

lines=$(for d in /usr/local/share/ca-certificates /etc/pki/injected-ca-trust
do
    [ -d "$d" ] && find "$d" -maxdepth 1 -name '*.crt' -o -name '*.pem' \
         -print -exec cp -L {} /etc/pki/ca-trust/source/anchors \;
done | wc -l)

[ "$lines" -gt 0 ] && update-ca-trust
